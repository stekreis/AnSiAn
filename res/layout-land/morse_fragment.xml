<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/morseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseReceiveView
            android:id="@+id/morseReceiveView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  >
  </de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseReceiveView>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseSendingView
                    android:id="@+id/morseSendingView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                </de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseSendingView>
            </LinearLayout>
        </ScrollView>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseStatusView
            android:id="@+id/morseStatusView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseStatusView>

        <de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseButtonView
            android:id="@+id/morseButtonView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" >
        </de.tu.darmstadt.seemoo.ansian.gui.views.morse.MorseButtonView>

    </LinearLayout>

</LinearLayout>